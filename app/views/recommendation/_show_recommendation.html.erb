<% if @video_ids.any? %>
  <div class="container">
    <h1>Recommended videos</h1>
    <div id="player-wrapper"></div>
    <% @video_ids.in_groups_of(3) do |group| %>
      <div class="row">
        <% group.each do |video_id| %>
          <% if video_id %>
            <div class="col-md-4">
              <div class="yt_video thumbnail embed-container">
                <%= embed(video_id) %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>